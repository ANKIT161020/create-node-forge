{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "{{projectDescription}}",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only  --no-notify -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "prepare": "husky"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "mongoose",
    "template",
    "boilerplate",
    "rest-api",
    "monolithic",
    "best-practices"
